                <section>

                    <div class="container-fluid bg-light">


                        <!-- product card  -->
                        <div class="d-flex justify-content-evenly mt-5 d-sm-flex row">



                            <div class="d-flex my-3 d-sm-flex ">
                                <% products.forEach(product=> { %>
                                    <div class="card m-3 shadow p-3" style="width: 18rem;">
                                        <img src="        <%= product.productImage%>" class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= product.productName%>
                                            </h5>
                                            <p class="card-text">
                                                <%= product.productDescription%>
                                            </p>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <%= product.productFarm%>
                                            </li>
                                            <li class="list-group-item">â‚± <%= product.productPrice%> / kilo</li>
                                            <li class="list-group-item"><i class="fa-solid fa-location-dot"></i>
                                                <%= product.productLocation%>
                                            </li>
                                        </ul>
                                    </div>
                                    <%})%>

                            </div>
                        </div>

                </section>

